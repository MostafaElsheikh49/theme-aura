<!DOCTYPE html>
<html lang="{{ locale|default('en') }}">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ page.title ?? 'AURA' }}</title>

  {# These paths come from /assets, not /src/views/assets #}
  <link rel="stylesheet" href="{{ 'css/aura-update-01.css' | asset }}">
  <link rel="stylesheet" href="{{ 'css/aura.css' | asset }}">
  <link rel="stylesheet" href="{{ 'css/theme.css' | asset }}">
</head>
<body class="rb">
  {% include 'components/common/header.twig' ignore missing %}

  <main id="content">
    {% block content %}{% endblock %}
  </main>

  {% include 'components/common/footer.twig' ignore missing %}

  <script defer src="{{ 'js/aura.js' | asset }}"></script>
  <script defer src="{{ 'js/theme.js' | asset }}"></script>
</body>
</html>
