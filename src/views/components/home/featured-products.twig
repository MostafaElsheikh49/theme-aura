{# components/home/featured-products.twig #}
<section class="aura-products">
  <div class="container">
    <header class="section-head">
      <h3>{% if locale.code == 'ar' %}منتجات مميزة{% else %}Featured Products{% endif %}</h3>
      <a class="link" href="{{ path('catalog') }}">{% if locale.code == 'ar' %}عرض الكل{% else %}View all{% endif %}</a>
    </header>
    <div class="grid">
      {% for product in products.featured|slice(0,8) %}
        <article class="card">
          <a href="{{ path('product', {'slug': product.slug}) }}">
            <img src="{{ product.image }}" alt="{{ product.name }}">
            <h4>{{ product.name }}</h4>
            <div class="price">{{ product.price.formatted }}</div>
          </a>
          <form action="{{ path('cart.add', {'id': product.id}) }}" method="post">
            <button class="btn btn-primary">{% if locale.code == 'ar' %}أضف للسلة{% else %}Add to cart{% endif %}</button>
          </form>
        </article>
      {% else %}
        <p>{% if locale.code == 'ar' %}قم بإضافة منتجات مميزة من لوحة التحكم{% else %}Add featured products from the dashboard{% endif %}</p>
      {% endfor %}
    </div>
  </div>
</section>