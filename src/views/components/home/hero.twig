{% set bg = fields.background ?? '' %}
{% set title_en = fields.headline_en ?? '' %}
{% set title_ar = fields.headline_ar ?? '' %}
<section class="rb-hero" style="{% if bg %}--rb-hero-bg:url('{{ bg }}'){% endif %}">
  <div class="rb-hero__inner">
    {% if title_ar %}
      <h1 class="rb-hero__title rb-hero__title--ar">{{ title_ar }}</h1>
    {% endif %}
    {% if title_en %}
      <h2 class="rb-hero__title rb-hero__title--en">{{ title_en }}</h2>
    {% endif %}
  </div>
</section>