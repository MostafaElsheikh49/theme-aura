{% set items = fields.items is iterable ? fields.items : [] %}
<section class="rb-tm" aria-label="Testimonials">
  <div class="rb-tm__track">
    {% for t in items %}
      {% set name = t['items.name'] ?? t.name ?? '' %}
      {% set avatar = t['items.avatar'] ?? t.avatar ?? '' %}
      {% set text = t['items.text'] ?? t.text ?? '' %}
      {% set stars = t['items.stars'] ?? t.stars ?? 5 %}
      <figure class="rb-tm__item">
        <div class="rb-tm__face">
          {% if avatar %}<img src="{{ avatar }}" alt="{{ name }}">{% else %}<span class="rb-tm__ph"></span>{% endif %}
        </div>
        <blockquote class="rb-tm__quote">{{ text }}</blockquote>
        <figcaption class="rb-tm__meta">
          <span class="rb-tm__name">{{ name }}</span>
          <span class="rb-tm__stars" aria-label="{{ stars }}/5">★★★★★</span>
        </figcaption>
      </figure>
    {% else %}
      <div class="rb-tm__empty">Add testimonials in component settings.</div>
    {% endfor %}
  </div>
</section>