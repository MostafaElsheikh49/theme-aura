{# components/common/footer.twig #}
<footer class="aura-footer">
  <div class="container grid">
    <section>
      <h4>{{ store.name }}</h4>
      <p>{{ store.description|default('Premium electronics & smart devices') }}</p>
    </section>
    <section>
      <h5>{{ t('theme.newsletter.title') }}</h5>
      <p>{{ t('theme.newsletter.subtitle') }}</p>
      <form action="{{ path('newsletter.subscribe') }}" method="post" class="newsletter">
        <input type="email" name="email" placeholder="{{ t('theme.newsletter.placeholder') }}" required>
        <button class="btn btn-primary">{{ t('theme.newsletter.cta') }}</button>
      </form>
    </section>
    <section>
      <ul class="links">
        <li><a href="{{ path('page', {'slug':'about'}) }}">About</a></li>
        <li><a href="{{ path('contact') }}">Contact</a></li>
        <li><a href="{{ path('policy.privacy') }}">Privacy</a></li>
        <li><a href="{{ path('policy.terms') }}">Terms</a></li>
      </ul>
    </section>
  </div>
  <div class="copy">Â© {{ "now"|date("Y") }} {{ store.name }}</div>
</footer>