{
  "version": "0.1.1",
  "name": {
    "en": "AURA",
    "ar": "أورا"
  },
  "repository": "https://github.com/MostafaElsheikh49/theme-aura",
  "author_email": "mustafa.elshykh@outlook.com",
  "support_url": "https://salla.dev",
  "description": {
    "en": "A futuristic, minimal theme designed for tech and electronics stores. Built for speed, clarity, and premium presentation.",
    "ar": "قالب عصري ومبتكر بتصميم بسيط ومثالي لمتاجر التقنية والإلكترونيات. يتميز بالسرعة والأناقة وتجربة مستخدم متميزة."
  },
  "features": [
    "mega-menu",
    "fonts",
    "color",
    "breadcrumb",
    "filters",
    "component-featured-products",
    "component-products-slider"
  ],
  "settings": [
    {
      "type": "boolean",
      "id": "header_is_sticky",
      "label": "تثبيت القائمة العلوية",
      "format": "switch",
      "value": true
    },
    {
      "type": "boolean",
      "id": "topnav_is_dark",
      "label": "شريط علوي داكن",
      "format": "switch",
      "value": false
    },
    {
      "type": "boolean",
      "id": "footer_is_dark",
      "label": "تذييل داكن",
      "format": "switch",
      "value": false
    },
    {
      "type": "boolean",
      "id": "sticky_add_to_cart",
      "label": "تثبيت زر الإضافة في الموبايل",
      "format": "switch",
      "value": true
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "اللون الرئيسي",
      "value": "#00C4CC"
    }
  ],
  "components": [
    {
      "key": "hero",
      "title": "Hero Section",
      "icon": "sicon-image-carousel",
      "path": "home.hero",
      "is_default": true,
      "fields": [
        {
          "id": "headline",
          "type": "string",
          "label": "العنوان الرئيسي",
          "multilanguage": true,
          "format": "text"
        },
        {
          "id": "subheadline",
          "type": "string",
          "label": "النص الفرعي",
          "multilanguage": true,
          "format": "textarea"
        },
        {
          "id": "background_image",
          "type": "string",
          "label": "صورة الخلفية",
          "format": "image"
        }
      ]
    },
    {
      "key": "main-links",
      "title": "روابط سريعة",
      "icon": "sicon-layout-grid-rearrange",
      "path": "home.main-links",
      "is_default": true,
      "fields": [
        {
          "id": "links",
          "type": "collection",
          "label": "الروابط",
          "format": "collection",
          "fields": [
            {
              "id": "links.icon",
              "type": "string",
              "label": "الأيقونة",
              "format": "icon"
            },
            {
              "id": "links.title",
              "type": "string",
              "label": "العنوان",
              "multilanguage": true,
              "format": "text"
            },
            {
              "id": "links.url",
              "type": "items",
              "label": "الرابط",
              "format": "variable-list",
              "source": "custom"
            }
          ]
        }
      ]
    },
    {
      "key": "slider-products",
      "title": "منتجات مميزة",
      "icon": "sicon-list-play",
      "path": "home.slider-products",
      "fields": [
        {
          "id": "title",
          "type": "string",
          "label": "عنوان القسم",
          "multilanguage": true,
          "format": "text"
        },
        {
          "id": "products",
          "type": "items",
          "label": "قائمة المنتجات",
          "format": "dropdown-list",
          "source": "products",
          "multichoice": true,
          "required": true
        }
      ]
    },
    {
      "key": "square-banners",
      "title": "صور مربعة",
      "icon": "sicon-image",
      "path": "home.square-banners",
      "fields": [
        {
          "id": "banners",
          "type": "collection",
          "label": "الصور",
          "format": "collection",
          "fields": [
            {
              "id": "banners.image",
              "type": "string",
              "label": "صورة",
              "format": "image"
            },
            {
              "id": "banners.title",
              "type": "string",
              "label": "عنوان",
              "multilanguage": true,
              "format": "text"
            },
            {
              "id": "banners.url",
              "type": "items",
              "label": "الرابط",
              "format": "variable-list",
              "source": "custom"
            }
          ]
        }
      ]
    },
    {
      "key": "testimonials",
      "title": "آراء العملاء",
      "icon": "sicon-chat-bubbles",
      "path": "home.testimonials",
      "fields": [
        {
          "id": "items",
          "type": "collection",
          "label": "التقييمات",
          "format": "collection",
          "fields": [
            {
              "id": "items.name",
              "type": "string",
              "label": "اسم العميل",
              "format": "text"
            },
            {
              "id": "items.text",
              "type": "string",
              "label": "نص التقييم",
              "format": "textarea"
            },
            {
              "id": "items.avatar",
              "type": "string",
              "label": "صورة العميل",
              "format": "image"
            }
          ]
        }
      ]
    }
  ]
}
