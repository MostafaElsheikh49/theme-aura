{
  "name": "AURA",
  "slug": "theme-aura",
  "version": "0.1.0",
  "description": "Futuristic bilingual theme for tech & electronics stores.",
  "author": "Moss & Friend",
  "license": "MIT",
  "color_scheme": "auto",
  "settings": [
    {
      "id": "accent_color",
      "type": "color",
      "label": "Accent Color",
      "default": "#2AF0FF"
    },
    {
      "id": "arabic_font",
      "type": "select",
      "label": "Arabic Font",
      "options": ["Cairo", "IBM Plex Arabic", "Tajawal"],
      "default": "Cairo"
    },
    {
      "id": "english_font",
      "type": "select",
      "label": "English Font",
      "options": ["Poppins", "Inter", "IBM Plex Sans"],
      "default": "Poppins"
    },
    {
      "id": "button_shape",
      "type": "select",
      "label": "Button Shape",
      "options": ["rounded", "square", "capsule"],
      "default": "capsule"
    },
    {
      "id": "hero_background",
      "type": "image",
      "label": "Hero Background Image"
    },
    {
      "id": "hero_headline_en",
      "type": "text",
      "label": "Hero Headline (EN)",
      "default": "Experience the Future of Tech"
    },
    {
      "id": "hero_headline_ar",
      "type": "text",
      "label": "عنوان الهيدر",
      "default": "اختبر مستقبل التقنية"
    }
  ]
}
