{
  "name": "AURA",
  "slug": "theme-aura",
  "version": "0.1.3",
  "description": "Futuristic, bilingual Salla theme for tech & electronics stores. Dark-ready, mobile-first with glowing CTAs and glass cards.",
  "author": "Moss & Friend",
  "license": "MIT",
  "features": {
    "blog": true,
    "brands": true,
    "wishlist": true,
    "loyalty": true
  },
  "components": {
    "home_hero": {
      "title": "AURA • Hero Banner",
      "icon": "heroicons-outline:photograph",
      "path": "components/home/hero.twig"
    },
    "home_features": {
      "title": "AURA • Store Features",
      "icon": "heroicons-outline:collection",
      "path": "components/home/features.twig"
    },
    "home_products": {
      "title": "AURA • Featured Products Grid",
      "icon": "heroicons-outline:template",
      "path": "components/home/featured-products.twig"
    },
    "common_newsletter": {
      "title": "AURA • Newsletter Signup",
      "icon": "heroicons-outline:mail",
      "path": "components/common/newsletter.twig"
    }
  },
  "settings": {
    "color_scheme": {
      "type": "list",
      "label": "Color Scheme",
      "options": [
        "light",
        "dark",
        "auto"
      ],
      "default": "auto"
    },
    "accent_color": {
      "type": "string",
      "label": "Accent Color (HEX)",
      "default": "#2AF0FF"
    },
    "arabic_font": {
      "type": "list",
      "label": "Arabic Font",
      "options": [
        "Cairo",
        "IBM Plex Arabic",
        "Tajawal"
      ],
      "default": "Cairo"
    },
    "english_font": {
      "type": "list",
      "label": "English Font",
      "options": [
        "Poppins",
        "Inter",
        "IBM Plex Sans"
      ],
      "default": "Poppins"
    },
    "button_shape": {
      "type": "list",
      "label": "Button Shape",
      "options": [
        "rounded",
        "square",
        "capsule"
      ],
      "default": "capsule"
    },
    "hero_background": {
      "type": "string",
      "label": "Hero Background Image URL",
      "default": ""
    },
    "hero_headline_en": {
      "type": "string",
      "label": "Hero Headline (EN)",
      "default": "Experience the Future of Tech"
    },
    "hero_headline_ar": {
      "type": "string",
      "label": "عنوان الهيدر",
      "default": "اختبر مستقبل التقنية"
    }
  }
}
